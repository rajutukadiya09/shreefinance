<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="5dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="5dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Header: Loan ID + Status -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvLoanId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan ID: E-000001"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="#49DF13" />
        </RelativeLayout>

        <!-- Customer name -->
        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer: Test User"
            android:textColor="#424242"
            android:textSize="15sp"
            android:layout_marginTop="6dp" />

        <!-- Loan amount -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount: â‚¹50,000"
                android:textColor="#424242"

                android:textSize="15sp"
                android:layout_marginTop="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                >
                <ImageButton
                    android:id="@+id/btnemi"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="1dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/emi"
                    android:contentDescription="Call" />

                <ImageButton
                    android:id="@+id/btnCall"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/phonecall"
                    android:contentDescription="Call" />

                <ImageButton
                    android:id="@+id/btnMessage"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:scaleType="fitXY"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:src="@drawable/message"
                    android:contentDescription="Message" />

                <ImageButton
                    android:id="@+id/btnWhatsApp"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:scaleType="fitXY"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:src="@drawable/whastapp"
                    android:contentDescription="WhatsApp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Action buttons -->


    </LinearLayout>
</androidx.cardview.widget.CardView>
