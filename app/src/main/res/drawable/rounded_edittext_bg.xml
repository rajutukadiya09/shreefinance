<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@android:color/white" />

    <!-- Rounded corners -->
    <corners android:radius="6dp" />

    <!-- Border/Stroke color -->
    <stroke
        android:width="1dp"
        android:color="#267C9B" /> <!-- Change to your theme color -->

    <!-- Inner padding -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
